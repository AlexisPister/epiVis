{
  "width": "[width]",
  "height": "[height]",
  "data": [
    {
      "name": "data",
      "url": "./data/[filename]",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "authors",
      "url": "./data/[authorsFilename]",
      "format": {
        "type": "csv"
      }
    }
  ],
  "networks": [
    {
      "name": "network",
      "parts": [
        {
          "data": "data",
          "yieldsNodes": [
            {
              "id_field": "AI strain",
              "type": "Strain",
              "data": []
            },
            {
              "id_field": "Epic Code ",
              "type": "Paper",
              "data": []
            },
            {
              "id_field": "First Author",
              "type": "Person",
              "data": []
            }
          ],
          "yieldsLinks": [
            {
              "source_id": {
                "field": "AI strain"
              },
              "source_node_type": "Strain",
              "source_id_field": "id",
              "target_id": {
                "field": "Epidemic wave"
              },
              "target_node_type": "Wave",
              "target_id_field": "id",
              "data": []
            },
            {
              "source_id": {
                "field": "Epic Code "
              },
              "source_node_type": "Paper",
              "target_id": {
                "field": "First Author"
              },
              "target_node_type": "Person",
              "data": []
            },
            {
              "source_id": {
                "field": "Epic Code "
              },
              "source_node_type": "Paper",
              "target_id": {
                "field": "Second Author "
              },
              "target_node_type": "Person",
              "data": []
            },
            {
              "source_id": {
                "field": "Epic Code "
              },
              "source_node_type": "Paper",
              "target_id": {
                "field": "Third Author "
              },
              "target_node_type": "Person",
              "data": []
            },
            {
              "source_id": {
                "field": "First Author"
              },
              "source_node_type": "Person",
              "target_id": {
                "field": "Affiliation of 1st author"
              },
              "target_node_type": "Institution",
              "data": []
            },
            {
              "source_id": {
                "field": "Second Author "
              },
              "source_node_type": "Person",
              "target_id": {
                "field": "Affiliation of 2nd author"
              },
              "target_node_type": "Institution",
              "data": []
            },
            {
              "source_id": {
                "field": "Third Author "
              },
              "source_node_type": "Person",
              "target_id": {
                "field": "Affiliation of 3rd author"
              },
              "target_node_type": "Institution",
              "data": []
            },
            {
              "source_id": {
                "field": "AI strain"
              },
              "source_node_type": "Strain",
              "target_id": {
                "field": "Epic Code "
              },
              "target_node_type": "Paper",
              "data": []
            },
            {
              "source_id": {
                "field": "Region of study "
              },
              "source_node_type": "Country",
              "target_id": {
                "field": "Epidemic wave"
              },
              "target_node_type": "Wave",
              "data": []
            }
          ]
        },
        {
          "data": "authors",
          "yieldsNodes": [
          ],
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Paper associated "
              },
              "source_node_type": "Paper",
              "source_id_field": "id",
              "target_id": {
                "field": "Author"
              },
              "target_node_type": "Person",
              "target_id_field": "id",
              "data": []
            },
            {
              "source_id": {
                "field": "Afilliation name 1"
              },
              "source_node_type": "Institution",
              "source_id_field": "id",
              "target_id": {
                "field": "Author"
              },
              "target_node_type": "Person",
              "target_id_field": "id",
              "data": []
            }
          ]
        }
      ],
      "transform": [
        {
          "type": "filterNodes",
          "expression": "datum.id !== '' "
        },
        {
          "type": "filterNodes",
          "expression": "datum.id !== ' ' "
        },
        {
          "type": "filterNodes",
          "expression": "datum.id !== 'not specified' "
        },
        {
          "type": "metric",
          "metric": "degree"
        }
      ]
    }
  ],
  "layouts": [
    {
      "name": "layout",
      "network": "network",
      "type": "webcola",
      "avoidOverlap": true
    },
    {
      "name": "forcelayout",
      "network": "network",
      "type": "d3-force"
    }
  ],
  "scales": [
    {
      "name": "radius",
      "type": "linear",
      "range": [
        90,
        250
      ],
      "domain": {
        "data": "network.nodes",
        "field": "degree"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "lightblue",
        "lightgreen",
        "red",
        "purple",
        "orange",
        "brown"
      ],
      "domain": [
        "Person",
        "Paper",
        "Strain",
        "Wave",
        "Institution",
        "Country"
      ]
    },
    {
      "name": "shapeScale",
      "type": "ordinal",
      "range": [
        "circle",
        "square",
        "diamond",
        "triangle",
        "cross",
        "triangle-down"
      ],
      "domain": [
        "Person",
        "Paper",
        "Strain",
        "Wave",
        "Institution",
        "Country"
      ]
    }
  ],
  "vis": [
    {
      "entries": "network.links",
      "layout": "forcelayout",
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target",
        "stroke": "gray"
      }
    },
    {
      "entries": "network.nodes",
      "layout": "forcelayout",
      "mark": {
        "type": "symbol",
        "shape": {
          "field": "_type",
          "scale": "shapeScale"
        },
        "size": {
          "field": "degree",
          "scale": "radius"
        },
        "fill": {
          "field": "_type",
          "scale": "color"
        },
        "stroke": "black",
        "tooltip": {
          "expression": "datum.id + ' (degree ' + datum.degree + ')' "
        }
      }
    }
  ]
}